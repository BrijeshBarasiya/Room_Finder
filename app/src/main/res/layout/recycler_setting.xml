<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10ssp"
    android:layout_marginVertical="@dimen/_5ssp"
    android:background="@drawable/radius"
    app:cardCornerRadius="@dimen/_10ssp"
    android:padding="@dimen/_10ssp"
    android:animateLayoutChanges="true"
    android:id="@+id/layout_single_cell"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_setting_icon"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_profile"
        android:tint="@color/primary_color"
        app:layout_constraintTop_toTopOf="@id/lbl_setting_name"
        app:layout_constraintBottom_toBottomOf="@id/lbl_setting_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_setting_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/B1"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@id/img_setting_icon"
        android:textColor="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_setting_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/B2"
        android:layout_marginTop="@dimen/_10ssp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/lbl_setting_name"
        app:layout_constraintEnd_toEndOf="@id/lbl_setting_name"
        app:layout_constraintTop_toBottomOf="@id/lbl_setting_name" />

</androidx.constraintlayout.widget.ConstraintLayout>