<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoomFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <!-- Headings -->
    <style name="Heading1" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading2" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading3" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading4" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="B1" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="B2" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="B3" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="B4" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_6ssp</item>
    </style>

    <!-- Button -->
    <style name="PrimaryButton" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
</resources>